@model List<ETradingClient.Models.Product>

@{ ViewBag.Title = $"Products in {ViewBag.CategoryName}"; }

<style>
    /* Style the product list container */
    .product-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
        padding: 10px;
    }

    /* Style individual product items */
    .product-item {
        background-color: #ffffff;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 15px;
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        /* Add hover effect to product items */
        .product-item:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        /* Style product images */
        .product-item img {
            max-width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        /* Style product names */
        .product-item h3 {
            font-size: 18px;
            color: #333;
            margin: 10px 0;
            font-weight: bold;
        }

        /* Style product descriptions */
        .product-item p {
            font-size: 14px;
            color: #666;
            margin: 10px 0;
            line-height: 1.5;
        }

            /* Style the price text */
            .product-item p:last-of-type {
                font-size: 16px;
                color: #000;
                font-weight: bold;
            }

        /* Style the view details link */
        .product-item a {
            display: inline-block;
            margin-top: 10px;
            padding: 8px 15px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 14px;
            transition: background-color 0.3s;
        }

            .product-item a:hover {
                background-color: #0056b3;
            }
</style>

<h2>Products in @ViewBag.CategoryName</h2>

@if (Model.Count == 0)
{
<p>No products found in this category.</p> }
            else
            {
<div class="product-list">
    @foreach (var product in Model)
    {
<div class="product-item">
    <img src="@product.ImagePath" alt="@product.ProductName" />
    <h3>
        <a href="@Url.Action("Details", "Products", new { id = product.ProductID })">
            @product.ProductName
        </a>
    </h3>
    <p>@product.Description</p>
    <p>Price: $@product.Price</p>
    <a href="@Url.Action("Details", "Products", new { id = product.ProductID })">View Details</a>
</div>}
</div>}