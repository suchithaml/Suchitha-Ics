@model ETradingClient.Models.Customer

@{ ViewBag.Title = "Profile"; }

<div class="profile-container">
    <div class="card shadow-lg">
        <div class="card-header text-white text-center">
            <h2>Profile Details</h2>
        </div>
        <div class="card-body" style="padding-left:50px;">
            @if (ViewBag.ErrorMessage != null)
            {
<div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div> }
            else if (ViewBag.Message != null)
            {
<div class="alert alert-success text-center">@ViewBag.Message</div>            }

            <form method="post" action="/Profile/Update">
                <div class="form-group">
                    <label for="CustomerName" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="CustomerName" name="CustomerName" value="@Model.CustomerName" required>
                </div>
                <div class="form-group">
                    <label for="CustomerPhoneNo" class="form-label">Phone Number</label>
                    <input type="text" class="form-control" id="CustomerPhoneNo" name="CustomerPhoneNo" value="@Model.CustomerPhoneNo">
                </div>
                <div class="form-group">
                    <label for="CustomerAddress" class="form-label">Address</label>
                    <textarea class="form-control" id="CustomerAddress" name="CustomerAddress" rows="3">@Model.CustomerAddress</textarea>
                </div>
                <div class="form-group">
                    <label for="CustomerEmailID" class="form-label">Email</label>
                    <input type="email" class="form-control" id="CustomerEmailID" name="CustomerEmailID" value="@Model.CustomerEmailID" required>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg mt-3">
                        <i class="fas fa-save"></i> Update Profile
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
        font-family: 'Roboto', sans-serif;
        padding: 20px 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .profile-container {
        width: 100%;
        max-width: 800px;
        margin: auto;
        padding: 20px;
    }

    .card {
        background: #ffffff;
        border-radius: 12px;
        border: none;
        overflow: hidden;
    }

    .card-header {
        background: #007bff;
        padding: 30px;
        border-bottom: 3px solid #0056b3;
    }

    h2 {
        font-size: 2rem;
        font-weight: bold;
        margin: 0;
    }

    .form-label {
        color: #495057;
        font-weight: 600;
        margin-bottom: 12px;
        font-size: 1.1rem;
        display: block;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 8px;
        padding: 14px 16px;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        width: 100%;
    }

    .form-control:focus {
        border-color: #80bdff;
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.25);
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-weight: bold;
        padding: 12px 30px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
        transform: translateY(-3px);
    }

    .alert {
        font-size: 1.1rem;
        margin: 15px 0;
        border-radius: 8px;
    }

    .btn-primary i {
        margin-right: 8px;
    }

   
</style>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
