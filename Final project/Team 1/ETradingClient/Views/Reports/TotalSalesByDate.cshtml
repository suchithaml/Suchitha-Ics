@model ETradingClient.Models.mdlTotalSalesResultByDate
@using System.Web.Mvc
@using System.Web.Mvc.Html
@{ ViewBag.Title = "TotalSalesByDate"; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Helvetica+Neue:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        /* Apply the requested font family */
        body {
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            background-color: #f4f6f9; /* Light background color for better contrast */
            color: #333;
            margin: 0;
            padding: 0;
        }

        /* Header Style */
        header {
            background-color: #1b6ae7; /* Sky Blue Color */
            color: white;
            padding: 20px;
            text-align: center;
            margin-bottom: 30px; /* Add spacing between header and content */
        }

        h2 {
            color: #ffffff; /* White color for title */
            font-size: 30px;
        }

        /* Container for content */
        .container {
            margin-top: 30px;
            padding: 0 15px;
            width: 60%; /* Set the width to 60% */
            margin: 0 auto; /* Center align the content */
        }

        /* Styles for form and input elements */
        form {
            text-align: center;
            margin-bottom: 30px;
        }

        input[type="date"] {
            padding: 10px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid #ccc;
            width: 250px;
            margin-right: 10px; /* Spacing between input and button */
        }

        button {
            background-color: #3a506b; /* Primary Color */
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            button:hover {
                background-color: #1c2541; /* Darker shade for hover effect */
            }

        /* Styles for definition list (dl) */
        dl.dl-horizontal {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }

            dl.dl-horizontal dt {
                width: 200px;
                font-weight: bold;
                padding-right: 15px;
            }

            dl.dl-horizontal dd {
                flex: 1;
                margin-bottom: 10px;
            }

        /* Error message styling */
        h3 {
            color: red;
            font-size: 18px;
        }

        /* Footer Style */
        footer {
            background-color: #1b6ae7; /* Sky Blue Color */
            color: white;
            text-align: center;
            padding: 15px;
            margin-top: 40px;
        }
    </style>
</head>
<body>

    <header>
        <h2>@ViewBag.Title</h2>
    </header>

    <div class="container">
        <div class="row">

            <form action="TotalSalesByDate" method="post">
                <input type="date" name="txtdate" id="txtdate" />
                <button type="submit">Get Sales</button>
            </form>

            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.TotalSales)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TotalSales)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.SalesDate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SalesDate)
                    </dd>
                </dl>
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
<h3 style="text-align:center">@Html.Raw(ViewBag.ErrorMessage)</h3>            }

        </div>
    </div>

    <footer>
        <p>&copy; 2025 ETradingClient. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
