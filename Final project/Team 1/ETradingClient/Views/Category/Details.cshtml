@model ETradingClient.Models.Category

@{ ViewBag.Title = "Category Details"; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Helvetica+Neue:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            background-color: #f4f6f9;
            color: #333;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #1b6ae7;
            color: white;
            padding: 20px;
            text-align: center;
            margin-bottom: 30px;
        }

        h2 {
            color: #ffffff;
            font-size: 30px;
        }

        .container {
            padding: 20px;
        }

        .details-container {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .dl-horizontal dt {
            font-weight: bold;
            color: #1b6ae7;
        }

        .dl-horizontal dd {
            padding-left: 10px;
        }

        .btn {
            background-color: #1b6ae7;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

            .btn:hover {
                background-color: #3a506b;
            }

        footer {
            background-color: #1b6ae7;
            color: white;
            text-align: center;
            padding: 15px;
            margin-top: 40px;
        }

        h3.error-message {
            color: red;
            font-weight: bold;
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <header>
        <h2>@ViewBag.Title</h2>
    </header>

    <div class="container">
        <div class="details-container">
            <h4><strong>Category Details</strong></h4>
            <hr />

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CategoryName)
                </dd>
            </dl>
        </div>

        <h3 class="error-message">@Html.Raw(ViewBag.ErrorMessage)</h3>

        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryID }) |
            @Html.ActionLink("Back to List", "Index", new { @class = "btn" })
        </p>
    </div>

    <footer>
        <p>&copy; 2025 ETradingClient. All rights reserved.</p>
    </footer>

</body>
</html>
