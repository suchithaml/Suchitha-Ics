@model ETradingClient.Models.mdlActivationDeactivationVendor

@{ ViewBag.Title = "Activation & Deactivation Vendor"; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Helvetica+Neue:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            background-color: #f4f6f9;
            color: #333;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #1b6ae7;
            color: white;
            padding: 20px;
            text-align: center;
            margin-bottom: 30px;
        }

        h2 {
            color: #ffffff;
            font-size: 30px;
        }

        .container {
            padding: 20px;
        }

        .form-horizontal {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-weight: bold;
            }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button, .btn {
            padding: 10px 15px;
            background-color: #1b6ae7;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover, .btn:hover {
                background-color: #3a506b;
            }

        footer {
            background-color: #1b6ae7;
            color: white;
            text-align: center;
            padding: 15px;
            margin-top: 40px;
        }

        h3.error-message {
            color: red;
            font-weight: bold;
            text-align: center;
            margin-top: 20px;
        }

        #MyForm {
            display: none;
        }
    </style>
</head>
<body>

    <header>
        <h2>@ViewBag.Title</h2>
    </header>

    <div class="container">
        @using (Html.BeginForm())
        {
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <!-- Vendor ID (hidden) -->
                    <div class="form-group" style="display:none">
                        @Html.LabelFor(model => model.VendorID, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.VendorID, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.VendorID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Vendor Name -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.VendorName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.VendorName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.VendorName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Vendor Phone Number -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.VendorCompanyPhoneNo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.VendorCompanyPhoneNo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.VendorCompanyPhoneNo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Vendor Address -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.VendorCompanyAddress, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.VendorCompanyAddress, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.VendorCompanyAddress, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Vendor Email -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.VendorCompanyEmailID, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.VendorCompanyEmailID, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.VendorCompanyEmailID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Vendor Company Name -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.VendorCompanyName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.VendorCompanyName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.VendorCompanyName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- Vendor Active/Inactive -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.VendorIsActive, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.VendorIsActive)
                                @Html.ValidationMessageFor(model => model.VendorIsActive, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <!-- Customer ID (hidden) -->
                    <div class="form-group" style="display:none">
                        @Html.LabelFor(model => model.CustomerID, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CustomerID, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <h3 class="error-message">@Html.Raw(ViewBag.ErrorMessage)</h3>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>}

        <div>
            @Html.ActionLink("Back to List", "GetAllActivationDeactivationVendor", new { @class = "btn btn-secondary" })
        </div>

    </div>

    <footer>
        <p>&copy; 2025 ETradingClient. All rights reserved.</p>
    </footer>

    <script>
        $(document).ready(function () {
            $("form").validate();
        });
    </script>

</body>
</html>
