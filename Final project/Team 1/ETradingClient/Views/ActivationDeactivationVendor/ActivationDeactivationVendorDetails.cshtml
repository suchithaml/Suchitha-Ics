@model ETradingClient.Models.mdlActivationDeactivationVendor

@{ ViewBag.Title = "Activation & Deactivation Vendor"; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Helvetica+Neue:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            background-color: #f4f6f9;
            color: #333;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #1b6ae7;
            color: white;
            padding: 20px;
            text-align: center;
            margin-bottom: 30px;
        }

        h2 {
            color: #ffffff;
            font-size: 30px;
        }

        .container {
            padding: 20px;
        }

        .details {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        dl {
            display: grid;
            grid-template-columns: auto 1fr;
            gap: 10px;
            margin: 0;
            padding: 0;
        }

        dt {
            font-weight: bold;
            color: #555;
        }

        dd {
            margin: 0;
            color: #333;
        }

        .action-links {
            margin-top: 20px;
            display: flex;
            justify-content: space-between;
        }

        .btn {
            padding: 10px 15px;
            background-color: #1b6ae7;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

            .btn:hover {
                background-color: #3a506b;
            }

        footer {
            background-color: #1b6ae7;
            color: white;
            text-align: center;
            padding: 15px;
            margin-top: 40px;
        }
    </style>
</head>
<body>

    <header>
        <h2>@ViewBag.Title</h2>
    </header>

    <div class="container">
        <div class="details">
            @*<h4>mdlActivationDeactivationVendor</h4>
            <hr />*@
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.VendorID)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.VendorID)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.VendorName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.VendorName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.VendorCompanyPhoneNo)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.VendorCompanyPhoneNo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.VendorCompanyAddress)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.VendorCompanyAddress)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.VendorCompanyEmailID)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.VendorCompanyEmailID)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.VendorCompanyName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.VendorCompanyName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.VendorIsActive)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.VendorIsActive)
                </dd>

                <dt style="display:none">
                    @Html.DisplayNameFor(model => model.CustomerID)
                </dt>
                <dd style="display:none">
                    @Html.DisplayFor(model => model.CustomerID)
                </dd>
            </dl>
        </div>

        <div class="action-links">
            <p>
                @Html.ActionLink("Edit", "ActivationDeactivationVendorEdit", new { id = Model.VendorID }) |
                @Html.ActionLink("Back to List", "GetAllActivationDeactivationVendor", new { id = Model.VendorID })
            </p>
        </div>
    </div>

    <footer>
        <p>&copy; 2025 ETradingClient. All rights reserved.</p>
    </footer>

</body>
</html>
