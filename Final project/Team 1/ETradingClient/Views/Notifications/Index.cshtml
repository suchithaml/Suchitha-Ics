@model IEnumerable<ETradingClient.Models.NotificationViewModel>

@{ ViewBag.Title = "Notifications";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use your layout if needed
                                              //
}
<h2>Notifications</h2>
<div class="container my-5">


    @if (ViewBag.Message != null)
    {
<div class="alert alert-warning text-center mt-4">
    @ViewBag.Message
</div> }
else
{
<div class="notification-container mt-4">
    @foreach (var notification in Model)
    {
<div class="notification-card p-3 mb-3 shadow-sm">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-1">@notification.ProductName</h5>
            <p class="mb-0 text-muted">Price changed on: @notification.UpdatedAt</p>
        </div>
        <div class="price-change text-right">
            <span class="badge bg-danger text-white">Old: $@notification.OldPrice</span>
            <span class="badge bg-success text-white">New: $@notification.NewPrice</span>
        </div>
    </div>
</div>}
</div>}
</div>

<style>
    .notification-container {
        max-width: 700px;
        overflow-x: hidden; /* Prevent horizontal scrolling */
    }

    .notification-card {
        background-color: #f9f9f9;
        border-radius: 8px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .notification-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }

    .price-change span {
        font-size: 14px;
        margin-right: 8px;
    }

    h2.text-primary {
        font-weight: 700;
        margin-bottom: 20px;
        justify-content: center;
    }

    body {
        overflow-x: hidden; /* Ensure the entire page does not allow horizontal scrolling */
    }
</style>